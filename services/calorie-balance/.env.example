# Environment Configuration for Calorie Balance Service
# Copy this file to .env and update with your actual values

# Application
DEBUG=true
ENVIRONMENT=development

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres.your-project-id:your-password@aws-0-eu-central-1.pooler.supabase.com:5432/postgres

# Supabase
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here-generate-a-strong-one
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services (adjust ports as needed)
MEAL_TRACKING_SERVICE_URL=http://localhost:8002
HEALTH_MONITOR_SERVICE_URL=http://localhost:8003
AI_COACH_SERVICE_URL=http://localhost:8005

# N8N Integration (optional)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/gymbro
N8N_API_KEY=your-n8n-api-key

# OpenAI (optional - for AI features)
OPENAI_API_KEY=your-openai-api-key

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Business Logic Settings
DEFAULT_BMR_FORMULA=mifflin_st_jeor
CALORIE_PRECISION_GRAMS=20
CONFIDENCE_THRESHOLD=0.8
