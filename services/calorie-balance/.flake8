[flake8]
max-line-length = 88
extend-ignore = E203, W503, F401, F841, F821, F811, W293, E501, F541, E402
exclude = 
    .git,
    __pycache__,
    .venv,
    .pytest_cache,
    *.egg-info,
    sql/

# Ignore specific files with known issues
per-file-ignores =
    app/api/v1/auth.py:F821,F811
    app/api/routers/*.py:E501,W293
    app/core/exceptions.py:F811
    tests/test_*.py:E501,F541
    verify_deployment.py:E402
    create_tables_direct.py:E402,F401