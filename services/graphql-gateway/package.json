{
    "name": "gymbro-graphql-gateway",
    "version": "0.2.4",
    "description": "GraphQL Gateway for GymBro Platform - Unified API Layer",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon --exec ts-node src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "type-check": "tsc --noEmit",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "health": "curl -f http://localhost:4000/health || exit 1"
    },
    "keywords": [
        "graphql",
        "apollo-server",
        "gateway",
        "microservices",
        "gymbro",
        "api-gateway",
        "node.js",
        "typescript"
    ],
    "author": "GymBro Platform Team",
    "license": "MIT",
    "dependencies": {
        "@apollo/server": "^4.9.5",
        "@apollo/subgraph": "^2.5.6",
        "@apollo/gateway": "^2.5.6",
        "graphql": "^16.8.1",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "compression": "^1.7.4",
        "morgan": "^1.10.0",
        "dotenv": "^16.3.1",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "@types/node": "^20.8.6",
        "@types/express": "^4.17.20",
        "@types/cors": "^2.8.15",
        "@types/compression": "^1.7.4",
        "@types/morgan": "^1.9.7",
        "@types/jest": "^29.5.6",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/giamma80/gymbro-platform"
    },
    "bugs": {
        "url": "https://github.com/giamma80/gymbro-platform/issues"
    },
    "homepage": "https://github.com/giamma80/gymbro-platform#readme"
}