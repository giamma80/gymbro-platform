# ==========================================
# ğŸ‹ï¸ User Management Service - Optimized Dockerfile
# ==========================================

# Build stage
FROM python:3.11-slim as builder

# ğŸ“¦ Set build environment variables
ENV PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# ğŸ”§ Install build dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN pip install poetry==1.8.3

# Set work directory
WORKDIR /app

# Copy Poetry files and install dependencies
COPY pyproject.toml poetry.lock ./
RUN poetry config virtualenvs.create false && \
    poetry install --only=main --no-dev

# Runtime stage
FROM python:3.11-slim

# ğŸ“¦ Runtime environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

# ğŸ”§ Install only runtime dependencies
RUN apt-get update && apt-get install -y \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# ğŸ‘¤ Create app user
RUN useradd --create-home --shell /bin/bash app

# ğŸ“ Set work directory
WORKDIR /app

# Copy Python packages from builder
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# ğŸ“„ Copy application code
COPY . .

# ğŸ‘¤ Change ownership to app user
RUN chown -R app:app /app

# ğŸƒâ€â™‚ï¸ Health check - use PORT env var or default to 8000
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:${PORT:-8000}/health || exit 1

# ğŸŒ Expose port (dynamic based on PORT env var)
EXPOSE ${PORT:-8000}

# Switch to app user ONLY for running the app
USER app

# ğŸš€ Run the application with dynamic port
CMD uvicorn main:app --host 0.0.0.0 --port ${PORT:-8000}
