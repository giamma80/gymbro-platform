# Environment Configuration Template
# Service: {service-name}
# Connection Type: Supabase Client

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
SERVICE_NAME={service-name}
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these values from your Supabase project dashboard
# Project Settings > API > URL and Keys

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-key

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-jwt-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,capacitor://localhost,https://localhost,http://localhost:8080

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# MONITORING (OPTIONAL)
# =============================================================================
# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REAL_TIME=true
ENABLE_AUTH=true
ENABLE_STORAGE=false

# =============================================================================
# PERFORMANCE
# =============================================================================
REQUEST_TIMEOUT_SECONDS=30
MAX_CONNECTIONS=100

# =============================================================================
# LOGGING
# =============================================================================
STRUCTURED_LOGGING=true
DATABASE_SCHEMA={service-name}

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================
# OpenAI (if your service needs AI features)
# OPENAI_API_KEY=sk-your-openai-api-key
